#!/bin/bash

# no debian install packages via sysext and portable-services

echo "Removing debian legacy"
rm -rf $BUILDROOT/var/cache/debconf
rm -rf $BUILDROOT/var/lib/dpkg
rm -rf $BUILDROOT/var/lib/apt
rm -rf $BUILDROOT/usr/bin/deb-systemd-helper
rm -rf $BUILDROOT/usr/bin/deb-systemd-invoke
rm -rf $BUILDROOT/etc/apt
rm -rf $BUILDROOT/etc/dpkg



# store manifest of packages that were installed 
dpkg -l > $BUILDROOT/oem/dpkg.lst

# no debconf
rm -rf $BUILDROOT/var/lib/debconf
